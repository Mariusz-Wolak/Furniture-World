<aura:component description="FW_CustomModal" >











    <aura:if isTrue="{!v.showOrderSummary}">
        <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
                 aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <p class="orderSummaryHeader">{!$Label.c.Order_Summary}</p>
                </header>
                <div class="slds-modal__content slds-p-around_medium" id="modal-content-id-1">

                    <div class="slds-grid">
                        <div class="slds-col slds-size_3-of-12"/>
                            <div class="orderSummaryUserLabels slds-col slds-size_3-of-12 slds-gutters">
                                <div>Name: <ui:outputText value="{!v.currentUser.name}"/></div>
                                <div>Street: <ui:outputText value="{!v.currentUser.street}"/></div>
                                <div>City: <ui:outputText value="{!v.currentUser.city}"/></div>
                            </div>

                        <div class="slds-col slds-size_1-of-12"/>

                        <div class="orderSummaryUserLabels slds-col slds-size_3-of-12 slds-gutters">
                                <div>State: <ui:outputText value="{!v.currentUser.state}"/></div>
                                <div>Postal Code: <ui:outputText value="{!v.currentUser.postalCode}"/></div>
                                <div>Country: <ui:outputText value="{!v.currentUser.country}"/></div>
                        </div>
                        <div class="slds-col slds-size_2-of-12"/>
                    </div>

                    <div class="productsListDiv">
                        <aura:iteration items="{!v.productsInBasket}" var="product">
                            <div class="orderSummaryResult slds-grid">
                                <div class="productInfo slds-col slds-size_2-of-12"/>

                                <div class="slds-col slds-size_1-of-12">
                                    <img src="{!product.displayUrl}"/>
                                </div>

                                <div class="productInfo slds-col slds-size_3-of-12 slds-align_absolute-center">
                                    {!product.name}
                            </div>

                                <div class="productInfo slds-col slds-size_3-of-12 slds-align_absolute-center">
                                    €{!product.totalPriceForProduct} &nbsp;
                                    <div class="orderSummarySinglePrice">
                                        ({!product.quantity} x €{!product.actualPrice})
                                    </div>
                                </div>

                                <div class="productInfo slds-col slds-size_2-of-12"/>
                            </div>
                        </aura:iteration>
                    </div>

                    <div class="slds-text-align_right">
                        <div class="productInfo">
                            {!$Label.c.Total_Price}:
                        </div>
                        <div class="totalOrderPrice">
                            €{!v.totalPrice}
                        </div>
                    </div>

                    <div class="proceedModalButtons slds-text-align_right">
                        <lightning:button label="{!$Label.c.OK}" onclick="{!c.closeOrderSummary}" variant="brand"/>
                    </div>
                </div>
            </div>
        </section>
        <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>





</aura:component>
