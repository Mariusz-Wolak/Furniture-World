<aura:component description="FW_ProductsDiscountManagerPricebook" controller="FW_ProductsController"
                implements="flexipage:availableForAllPageTypes">

    <aura:attribute name="showModal" type="Boolean" access="global"/>
    <aura:attribute name="name" type="String" access="global"/>
    <aura:attribute name="startDate" type="Date" access="global"/>
    <aura:attribute name="endDate" type="Date" access="global"/>
    <aura:attribute name="results" type="Object[]" access="global"/>

    <aura:registerEvent name="FW_ProductsDiscountManagerNewPricebook" type="c:FW_ProductsDiscountManagerNewPricebook"/>

    <aura:handler event="c:FW_SendProductsToProductsList" action="{!c.receiveSearchResults}"/>

    <aura:if isTrue="{!v.showModal}">
    <section role="dialog" tabindex="-1" aria-labelledby="modal-heading-01" aria-modal="true"
             aria-describedby="modal-content-id-1" class="slds-modal slds-fade-in-open">
        <div class="slds-modal__container">
            <lightning:card class="card">
                <center>
                    <lightning:layout class="container" multipleRows="true">
                        <lightning:layoutItem size="12">
                            <h1 class="header">{!$Label.c.New_Pricebook}</h1>
                        </lightning:layoutItem>

                        <div class="slds-size--1-of-1" style="font-size: 20px;">
                            <div class="inputHeader slds-text-align_left">{!$Label.c.Name}</div>
                            <lightning:input value="{!v.name}"/>
                        </div>
                        <div class="slds-size--1-of-1" style="font-size: 20px;">
                            <div class="inputHeader slds-text-align_left">{!$Label.c.Start_Date}</div>
                            <lightning:input value="{!v.startDate}" type="date"/>
                        </div>
                        <div class="slds-size--1-of-1" style="font-size: 20px;">
                            <div class="inputHeader slds-text-align_left">{!$Label.c.End_Date}</div>
                            <lightning:input value="{!v.endDate}" type="date"/>
                        </div>
                    </lightning:layout>
                    <lightning:layout class="container">

                        <div class="slds-col slds-size_1-of-12"/>
                        <lightning:layoutItem class="button">
                            <lightning:button label="{!$Label.c.Cancel}"
                                              onclick="{!c.closeModal}">{!$Label.c.Cancel}</lightning:button>
                        </lightning:layoutItem>
                        <div class="slds-col slds-size_3-of-12"></div>
                        <lightning:layoutItem class="button">
                            <lightning:button label="{!$Label.c.Add}"
                                              onclick="{!c.addPricebook}">{!$Label.c.Add}</lightning:button>
                        </lightning:layoutItem>
                        <div class="slds-col slds-size_1-of-12"/>
                    </lightning:layout>
                </center>
            </lightning:card>
        </div>
    </section>
    <div class="slds-backdrop slds-backdrop_open"></div>
    </aura:if>

    <c:FW_CustomToast aura:id="customToast"/>
</aura:component>
