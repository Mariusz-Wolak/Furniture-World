<aura:component description="FW_ProductsDiscountManagerPricebooksCmp" implements="flexipage:availableForAllPageTypes">

    <aura:attribute name="showModal" type="Boolean" access="global"/>

    <lightning:card class="card">
        <div class="slds-grid">
            <div class="header slds-col slds-size_3-of-12">
                    {!$Label.c.Pricebooks}
            </div>
            <div class="slds-col slds-size_6-of-12"></div>
            <div class="buttonDiv slds-col slds-size_3-of-12">
                <lightning:button label="{!$Label.c.New_Pricebook}" onclick="{!c.openModal}"/>
            </div>
        </div>

            <c:FW_ProductsDiscountManagerPricebook showModal="{!v.showModal}"/>

    </lightning:card>

    <c:FW_CustomToast aura:id="customToast"/>
</aura:component>
