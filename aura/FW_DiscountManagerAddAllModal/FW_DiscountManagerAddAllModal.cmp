<aura:component description="FW_DiscountManagerAddAllModal">

    <aura:attribute name="showAddAllModal" type="Boolean" access="global"/>
    <aura:attribute name="results" type="Object[]" access="global"/>

    <aura:registerEvent name="FW_SendAllSearchResultsToPricebook" type="c:FW_SendAllSearchResultsToPricebook"/>

    <aura:if isTrue="{!v.showAddAllModal}">
        <div role="dialog" class="slds-modal slds-fade-in-open ">
            <div class="slds-modal__container">
                <header class="slds-modal__header">
                    <h1 class="slds-text-heading--medium">Confirmation</h1>
                </header>

                <div class="slds-modal__content slds-p-around--medium">
                    <center><b>Are you sure you want to move all results to the price book?</b></center>
                </div>

                <footer class="slds-modal__footer">
                    <lightning:button name='No' label='No' onclick='{!c.closeModal}'/>
                    <lightning:button variant="brand" name='Yes' label='Yes' onclick='{!c.moveAllToPricebook}'/>
                </footer>
            </div>
        </div>
        <div class="slds-backdrop slds-backdrop--open"></div>
    </aura:if>

    <c:FW_CustomToast aura:id="customToast"/>
</aura:component>
