<aura:component description="FW_ProductPhotos" implements="flexipage:availableForAllPageTypes"
                controller="FW_ProductManagementController">

    <aura:attribute name="productId" type="String" access="global"/>
    <aura:attribute name="photos" type="String[]" access="global"/>
    <aura:attribute name="product" type="String" access="global"/>

    <aura:attribute name="showPhotos" type="Boolean" access="global"/>

    <aura:handler name="init" value="{!this}" action="{!c.onInit}"/>
    <aura:handler event="c:FW_ProductIdSendToRecordView" action="{!c.receiveProductId}"/>
    <aura:handler name="FW_SendMainPhoto" event="c:FW_SendMainPhoto" action="{!c.getMainPhoto}"/>

    <aura:if isTrue="{!v.showPhotos}">
        <aura:iteration items="{!v.photos}" var="photo">
            <div class="slds-col slds-size_3-of-12">
                <c:FW_ProductSinglePhoto photo="{!photo.imgURL__c}" product="{!v.product}"/>
            </div>
            <div class="slds-col slds-size_9-of-12"/>
        </aura:iteration>

        <!--        <div class="slds-col slds-size_1-of-12">-->
        <!--            <img src="{!v.photos[0].imgURL__c}" alt=""/>-->
        <!--            <img src="{!v.photos[1].imgURL__c}" alt=""/>-->
        <!--        </div>-->
        <div class="slds-col slds-size_4-of-12">
            <img src="{!v.product}" alt=""/>
        </div>
    </aura:if>
</aura:component>
